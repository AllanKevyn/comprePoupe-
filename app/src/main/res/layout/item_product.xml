<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300sp"
    android:layout_margin="10sp"
    android:background="@color/white"
    app:cardCornerRadius="10sp"
    app:cardElevation="15sp"
    app:strokeWidth="8sp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idImageItem"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="5dp"
            android:src="@drawable/notebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxLength="65"
            android:maxLines="2"
            android:text="description of product, you need to buy because this product is to much good"
            android:textAlignment="textStart"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/idImageItem" />

        <TextView
            android:id="@+id/idPricePrev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="De: R$ 17,58"
            android:textColor="@color/FireBrick"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTextDescription" />

        <TextView
            android:id="@+id/idPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Por: R$ 17,58"
            android:textColor="@color/Green"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idPricePrev" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>